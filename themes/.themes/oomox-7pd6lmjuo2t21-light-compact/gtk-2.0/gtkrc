# This is the GTK 2 version of oomox-7pd6lmjuo2t21. It's whole purpose is to look as the
# GTK 3 version as much as possible until GTK 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#800080\nbase_color:#e3e2cc"
# Foreground/background
gtk-color-scheme = "fg_color:#800080\nbg_color:#e3e2cc"
# Selected foreground/background
gtk-color-scheme = "selected_fg_color:#e3e2cc\nselected_bg_color:#339a95"
# Titlebar foreground/background
gtk-color-scheme = "titlebar_fg_color:#800080\ntitlebar_bg_color:#2a3534"
# Tooltips foreground/background
gtk-color-scheme = "tooltip_fg_color:#e3e2cc\ntooltip_bg_color:#616161"
# Links
gtk-color-scheme = "link_color:#339a95\nvisited_link_color:#E040FB"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
